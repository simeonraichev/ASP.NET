@model IEnumerable<ProductDto>

<h1>@ViewData["Title"]</h1>

<table class ="table table-striped"> 
    <thead class="thead-dark">
        <tr>
            <td>Name</td>
            <td>Price</td>
            <td>Quantity</td>
            <td>Buy</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           <tr>
               <td>@item.Name</td>
               <td>@item.Price</td>
               <td>@item.Quantity</td>
               <td><button class="btn-primary btn-success">Buy</button></td>
           </tr> 
        }
    </tbody>
</table>